<DrsA19Bars>
	<!-- In case we want to change bars to recipes 
		resourceWoodBarArmour
		resourceIronBarArmour
		resourceSteelBarArmour
		resourceStainlessBar
	-->	

	<!-- Bars for crafting the corresponding blocks -->
	<append xpath="/items">
		<item name="resourceWoodBarArmour">			
			<property name="CustomIcon" value="resourceMetalPipe"/>
			<property name="CustomIconTint" value="139,69,19"/>
			<property name="HoldType" value="45"/>
			<property name="Meshfile" value="#Other/Items?Misc/sackPrefab.prefab"/>
			<property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>
			<property name="Material" value="MresourceScrapIron"/>
			<property name="Stacknumber" value="1000"/> <!-- STK resource -->
			<property name="EconomicValue" value="10"/>
			<property name="EconomicBundleSize" value="10"/>
			<property name="Group" value="Resources"/>
			<property name="CraftingIngredientTime" value="0.5"/>
		</item>
		<item name="resourceIronBarArmour">			
			<property name="CustomIcon" value="resourceMetalPipe"/>
			<property name="CustomIconTint" value="161,157,148"/>
			<property name="HoldType" value="45"/>
			<property name="Meshfile" value="#Other/Items?Misc/sackPrefab.prefab"/>
			<property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>
			<property name="Material" value="MresourceScrapIron"/>
			<property name="Stacknumber" value="1000"/> <!-- STK resource -->
			<property name="EconomicValue" value="10"/>
			<property name="EconomicBundleSize" value="10"/>
			<property name="Group" value="Resources"/>
			<property name="CraftingIngredientTime" value="0.5"/>
		</item>
		<item name="resourceSteelBarArmour">			
			<property name="CustomIcon" value="resourceMetalPipe"/>
			<property name="CustomIconTint" value="67,70,75"/>
			<property name="HoldType" value="45"/>
			<property name="Meshfile" value="#Other/Items?Misc/sackPrefab.prefab"/>
			<property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>
			<property name="Material" value="MresourceScrapIron"/>
			<property name="Stacknumber" value="1000"/> <!-- STK resource -->
			<property name="EconomicValue" value="50"/>
			<property name="EconomicBundleSize" value="50"/>
			<property name="Group" value="Resources"/>
			<property name="CraftingIngredientTime" value="0.5"/>
		</item>
		<item name="resourceStainlessBar">			
			<property name="CustomIcon" value="resourceMetalPipe"/>
			<property name="CustomIconTint" value="202,204,206"/>
			<property name="HoldType" value="45"/>
			<property name="Meshfile" value="#Other/Items?Misc/sackPrefab.prefab"/>
			<property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>
			<property name="Material" value="MresourceScrapIron"/>
			<property name="Stacknumber" value="1000"/> <!-- STK resource -->
			<property name="EconomicValue" value="100"/>
			<property name="EconomicBundleSize" value="100"/>
			<property name="Group" value="Resources"/>
			<property name="CraftingIngredientTime" value="0.5"/>
		</item>
	</append>

	<!-- Add the resources to the Allowed_upgrade_items list on the relevent tools -->
	<append xpath="/items/item[@name='meleeToolRepairT0StoneAxe']/property[@class='Action1']/property[@name='Allowed_upgrade_items']/@value">,resourceWoodBarArmour,resourceIronBarArmour,resourceSteelBarArmour,resourceStainlessBar</append>
	<append xpath="/items/item[@name='meleeToolRepairT1ClawHammer']/property[@class='Action1']/property[@name='Allowed_upgrade_items']/@value">,resourceWoodBarArmour,resourceIronBarArmour,resourceSteelBarArmour,resourceStainlessBar</append>
	<append xpath="/items/item[@name='meleeToolRepairT3Nailgun']/property[@class='Action1']/property[@name='Allowed_upgrade_items']/@value">,resourceWoodBarArmour,resourceIronBarArmour,resourceSteelBarArmour,resourceStainlessBar</append>

</DrsA19Bars>