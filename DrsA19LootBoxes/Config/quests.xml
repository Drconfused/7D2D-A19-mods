			<property name="difficulty" value="easy" />
			<property name="offer" value="Open the loot box for various rewards from the Trader.\nSecond tier trader loot box." />
			<property name="shareable" value="false" />

			<reward type="LootItem" id="traderRewardLootB" value="3" />
			<reward type="LootItem" id="mixedLootB" value="3" />
			<reward type="LootItem" id="ammoLootBase" value="3" />
		</quest>
		<quest id="Drs_Reward_LootA" repeatable="true">
			<property name="name" value="Trader Loot Box A" />
			<property name="subtitle" value="Trader Loot Box A" />
			<property name="description" value="Loot box reward from the Trader." />
			<property name="icon" value="ui_game_symbol_treasure" />
