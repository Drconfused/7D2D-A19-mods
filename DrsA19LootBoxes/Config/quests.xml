	<!--	TRADER REWARD LOOT SYSTEM	-->
	<append xpath="/quests">
		<quest id="Drs_Reward_Loot" repeatable="true">
			<property name="name" value="Trader Loot Box" />
			<property name="subtitle" value="Trader Loot Box" />
			<property name="description" value="Loot box reward from the Trader." />
			<property name="icon" value="ui_game_symbol_treasure" />
			<property name="category_key" value="reward" />
			<property name="difficulty" value="easy" />
			<property name="offer" value="Open the loot box for various rewards from the Trader." />
			<property name="shareable" value="false" />

			<reward type="LootItem" id="traderRewardLootC,traderRewardLootB,traderRewardLootA" value="1" />
			<reward type="LootItem" id="ammoLoot" value="1" />
			<reward type="LootItem" id="mixedLootC" value="1" />
			<reward type="LootItem" id="ammoLootBase" value="1" />
		</quest>
